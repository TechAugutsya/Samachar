<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Samachar" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryVariant">@color/purple</item>
        <item name="android:statusBarColor">@color/purple</item>

        <!-- Disable dark mode attributes -->
        <item name="android:colorPrimaryDark">@null</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="Theme.Samachar" parent="Base.Theme.Samachar" />

    <!-- Custom indicator style -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/yellow</item>
    </style>
</resources>

